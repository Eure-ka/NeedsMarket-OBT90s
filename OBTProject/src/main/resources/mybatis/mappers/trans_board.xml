<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.transboard">
	<!-- 리절트 맵 정의 -->
	<resultMap id="transResult" type="transBoardVO">
	
		<result property="tb_number" column="tb_number" />
		<result property="tb_title" column="tb_title" />
		<result property="tb_content" column="tb_content" />
		<result property="member_id" column="member_id" />
		
		<result property="tb_likenum" column="tb_likenum" />
		<result property="tb_countnum" column="tb_countnum" />
		<result property="write_date" column="write_date" />
	</resultMap>

<select id="selectAllArticlesList" resultMap="transResult">
	<![CDATA[
		select * from trans_board
	]]>

</select>

<select id="selectArticle" resultType="transBoardVO" parameterType="java.lang.Integer">
    <![CDATA[
      SELECT * from trans_board
      where tb_number = #{tb_number}		
    ]]>
  </select>
  
   <select id="selectNewArticleNO" resultType="int"  >
		<![CDATA[
			SELECT  nvl(max(tb_number), 0) + 1 from trans_board		
		]]>
	</select>
	
	<insert id="insertNewArticle"  parameterType="java.util.Map">
		<![CDATA[
			INSERT into trans_board(tb_number,  tb_title, tb_content,  member_id)
			VALUES(#{tb_number},#{tb_title},#{tb_content}, #{member_id})
		]]>      
	</insert>
	
	 <update id="updateArticle"  parameterType="java.util.Map">
			update trans_board
			set tb_title=#{tb_title},	 
			tb_content=#{tb_content}
			 <!-- <if test="imageFileName!='' and imageFileName!=null">
			  , imageFileName=#{imageFileName}
			</if> -->
			where tb_number=#{tb_number}
	</update>
	
	<delete id="deleteArticle"  parameterType="int">
    <![CDATA[
      delete from trans_board
      where tb_number in (
         SELECT tb_number FROM  trans_board
         START WITH tb_number = #{tb_number}
        <!--  CONNECT BY PRIOR  tb_number = parentNO ) -->
    ]]>      
  </delete>
	
  <!-- <select id="selectNewImageFileNO" resultType="int"  >
    <![CDATA[
      SELECT  nvl(max(imageFileNO),0) from imageFile		
    ]]>
  </select>
	

  <select  id="selectImageFileList" resultMap="imgResult" parameterType="int">
    <![CDATA[
      SELECT * from imageFile
      where tb_number=#{tb_number}	
    ]]>
  </select>  -->
  
  
</mapper>